@using StudyProject

@model List<tbGroup>

@{
    ViewBag.Title = "Groups";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h4 class="text-center">Групи</h4>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    <i class="fas fa-plus"></i> Додати нову групу
                </button>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <table class="table">
                    <tr>
                        <th>
                            Назва
                        </th>
                        <th>
                            Дата створення
                        </th>
                        <th>
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("UsersGroup", "Tutor", new { idGroup = item.idGroup})">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateCreate)
                            </td>
                            <td>
                                <button type="button" class="btn btn-warning btn-xs" data-toggle="modal" data-target="#editGroup" onclick="setValue('@item.idGroup')">
                                    <i class="fas fa-edit fa-1x"></i> 
                                </button>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm("AddNewGroup", "Tutor", FormMethod.Post))
{
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Створення групи</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-12">Назва</label>
                            <input type="text" name="Name" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрити</button>
                    <button type="submit" class="btn btn-primary">Створити</button>
                </div>
            </div>
        </div>
    </div>
}


@using (Html.BeginForm("EditGroup", "Tutor", FormMethod.Post))
{
    <div class="modal fade" id="editGroup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Редагування групи</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-12">Назва</label>
                            <input type="text" name="Name" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="idGroup" value="" id="group"/>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрити</button>
                    <button type="submit" class="btn btn-primary">Змінити</button>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts{
    <script>
        function setValue(id) {
            $('#group').val(id);
        }
    </script>    
}